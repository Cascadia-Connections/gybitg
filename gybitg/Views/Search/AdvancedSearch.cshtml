@using gybitg.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model gybitg.SearchViewModels.SearchResultsViewModel
@using gybitg.Views.Manage;
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = "_Layout";
    ViewData["Title"] = "AdvancedSearch";
    ViewData.AddActivePage(ManageNavPages.AdvancedSearch);
    var _requestedProfileId = (string)ViewData["RequestedProfileId"];
    var _user = UserManager.Users.SingleOrDefault(m => m.Id == _requestedProfileId);
}
<h3>Find athletes</h3>
<form asp-action="SearchResults" asp-controller="Search">
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" />
    </div>
    <div>
        <label asp-for="Position"></label>
        <select asp-for="Position" asp-items="@new SelectList(Enum.GetNames(typeof(PositionType)))">
            <option disabled selected value="">Select a Program</option>
        </select>
    </div>
    <div>
        Graduation Date <input asp-for="HSGraduationDate" />
    </div>
    <div>
        Points per Game: <input asp-for="PPG" />
    </div>
    <div>
        Minutes per Game: <input asp-for="MPG" />
    </div>
    <div>
        Three Pointers per Game: <input asp-for="TPMG" />
    </div>
    <div>
        Free Throws per Game <input asp-for="FTMG" />
    </div>

    <div>
        <input type="submit" value="Search" />
    </div>
</form>

