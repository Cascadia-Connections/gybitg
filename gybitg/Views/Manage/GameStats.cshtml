@using Microsoft.AspNetCore.Identity
@using gybitg.Models
@using Microsoft.AspNetCore.Mvc
@using gybitg.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDbContext _context


@{
    ViewData["Title"] = "GameStats";
    ViewData.AddActivePage(ManageNavPages.GameStats);

    var hasStats = _context.Stats.SingleOrDefault(m => m.UserId == UserManager.GetUserId(User));

    if (hasStats != null)
    {
        await Html.PartialAsync("StatList");
    }
    else
    {
        <h4>You have not saved any game stats.</h4>
        <hr />
    }
}
<br />
<br />
@await Html.PartialAsync("StatAdd")
